{
  "name": "@36node/template-tcp",
  "version": "0.3.2",
  "description": "A module boilerplate for tcp server.",
  "repository": {
    "url": "36node/sketch",
    "type": "git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "template": "tcp",
  "files": [
    "bin",
    "dist",
    "typings",
    "README.md"
  ],
  "bin": {
    "server": "bin/server.js"
  },
  "config-overrides-path": "../cli/config-overrides",
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "NODE_ENV=production sketch build",
    "format": "prettier --trailing-comma es5 --write 'src/**/*.js'",
    "lint": "sketch lint src",
    "release": "standard-version && git push --follow-tags origin master",
    "start": "NODE_ENV=development sketch start",
    "test": "NODE_ENV=test sketch test --env=node"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/eslint-config": "^0.4.0",
    "@36node/sketch": "^0.7.2",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.16.4",
    "standard-version": "^5.0.2"
  },
  "dependencies": {
    "@36node/whisper": "^0.1.0",
    "dotenv": "^7.0.0",
    "only": "^0.0.2",
    "pino": "^5.11.1"
  }
}
