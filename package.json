{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "build": "NODE_ENV=production lerna run build",
    "changelog": "lerna-changelog",
    "format": "prettier --trailing-comma es5 --write 'packages/**/*.js'",
    "lint": "eslint packages/*/src",
    "publish:all": "lerna publish from-git --registry https://registry.npmjs.org",
    "release": "lerna version --conventional-commits --push -m 'chore(release): publish'",
    "test": "NODE_ENV=test sketch test --testMatch='<rootDir>/packages/*/src/**/*.test.js'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config-overrides-path": "node_modules/@36node/sketch/config-overrides",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && CI=true yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ]
  },
  "dependencies": {
    "@36node/eslint-config": "^0.4.0",
    "@36node/sketch": "^0.6.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  }
}
