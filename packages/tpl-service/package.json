{
  "name": "@36node/template-service",
  "version": "0.8.8",
  "description": "A service boilerplate with openapi,rest and mongodb.",
  "repository": {
    "url": "36node/sketch",
    "type": "git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "template": "service",
  "files": [
    ".circleci",
    "bin",
    "src",
    "ssl",
    "test",
    ".dockerignore",
    "docker-compose.yml",
    "Dockerfile",
    "openapi.yml",
    "README.md"
  ],
  "bin": {
    "server": "bin/server.js"
  },
  "config-overrides-path": "../cli/config-overrides",
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "NODE_ENV=production sketch build",
    "format": "prettier --trailing-comma es5 --write 'src/**/*.js'",
    "gen:api": "swagen koa openapi.yml ./src/api && npm run format",
    "gen:postman": "swagen postman openapi.yml postman.json",
    "lint": "sketch lint src",
    "release": "standard-version && git push --follow-tags origin master",
    "start": "NODE_ENV=development sketch start",
    "test": "NODE_ENV=test sketch test --env=node"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/eslint-config": "^0.4.0",
    "@36node/sketch": "^0.7.4",
    "@36node/swagen": "^0.11.0",
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "@types/koa": "^2.0.46",
    "@types/lodash": "^4.14.116",
    "@types/mongoose": "^5.2.19",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.16.4",
    "standard-version": "^5.0.2"
  },
  "dependencies": {
    "@36node/mongoose-helper": "^0.2.0",
    "@koa/cors": "^3.0.0",
    "dotenv": "^7.0.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.1.0",
    "koa-jwt": "^3.5.1",
    "koa-logger": "^3.2.0",
    "koa-tree-router": "^0.4.5",
    "lodash": "^4.17.10",
    "mongoose": "^5.4.19",
    "pino": "^5.11.1"
  }
}
